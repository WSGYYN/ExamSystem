
@{
    ViewBag.Title = "StuLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="login-body">
    <div class="container">
        <form class="form-signin" action="/Login/StuLogin" method="post">
            <h2 class="form-signin-heading">在线考试系统</h2>
            <div class="login-wrap">
                <input type="text" name="StuLoginName" class="form-control" placeholder="User ID" autofocus>
                <input type="password" name="StuLoginPwd" class="form-control" placeholder="Password">

                <button class="btn btn-lg btn-login btn-block" type="submit">Sign in</button>
                <p>学生登录</p>
            </div>
        </form>
    </div>
</body>

