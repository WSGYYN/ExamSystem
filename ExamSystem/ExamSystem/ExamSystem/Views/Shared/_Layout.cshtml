@{
    Layout = null;
    var da = Session["Student"] as ExamSystem.Models.Student;
    var tda = Session["Teacher"] as ExamSystem.Models.Teacher;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.html">
    <title>在线考试系统</title>
    <link href="~/Content/assets/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- Bootstrap core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link href="~/Content/css/style-responsive.css" rel="stylesheet" />
</head>
<body>
    <section id="container" class="">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="#" class="logo">在线考试系统</a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu">
                    <!-- 顶部导航栏 -->
                    @if (Session["Student"] == null && Session["Teacher"] == null)
                    {
                        <li class="dropdown">
                            <a href="/Login/StuLogin">学生登录</a>
                        </li>
                        <li class="dropdown">
                            <a href="/Login/StuRegister">学生注册</a>
                        </li>
                        <li class="dropdown">
                            <a href="/Login/TeacherLogin">教师登录</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="top-nav ">
                <ul class="nav pull-right top-menu">
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="username">
                                @{
                                    if (Session["Student"] != null)
                                    {
                                        @da.StuName
                                    }
                                    else if (Session["Teacher"] != null)
                                    {
                                        @tda.TeacherName
                                    }
                                    else
                                    {
                                        <b>请登录</b>
                                    }
                                }
                            </span>
                        </a>
                    </li>

                    @if (Session["Student"] != null || Session["Teacher"] != null)
                    {
                        <li class="dropdown">
                            <a href="/Home/Layout">退出</a>
                        </li>
                    }
                </ul>
            </div>
        </header>
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->

                @if (Session["Student"] != null)
                {
                    <ul class="sidebar-menu">

                        <li class="active">
                            <a class="" href="/Home/Index">
                                <i class="icon-dashboard"></i>
                                <span>首页</span>
                            </a>
                        </li>
                        
                        <li class="active">
                            <a class="" href="/Exam/MyAnswer">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                <span>我的考试</span>
                            </a>
                        </li>
                        <li class="active">
                            <a class="" href="/Exam/StartExamIndex">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                <span>开始考试</span>
                            </a>
                        </li>
                        <li class="active">
                            <a class="" href="/Login/Realme/@da.StuID">
                                <i class="fa fa-file" aria-hidden="true"></i>
                                <span>我的资料</span>
                            </a>
                        </li>
                    </ul>
                }
                else if (Session["teacher"] != null)
                {
                    <ul class="sidebar-menu">

                        <li class="active">
                            <a class="" href="/Home/Index">
                                <i class="icon-dashboard"></i>
                                <span>首页</span>
                            </a>
                        </li>
                        
                        <li class="active">
                            <a class="" href="/StuManage/StuTable">
                                <i class="fa fa-drivers-license" aria-hidden="true"></i>
                                <span>学生管理</span>
                            </a>
                        </li>
                        <li class="active">
                            <a class="" href="/Paper/PaperIndex">
                                <i class="fa fa-book" aria-hidden="true"></i>
                                <span>试卷管理</span>
                            </a>
                        </li>
                        <li class="active">
                            <a class="" href="/Paper/AddPaper">
                                <i class="fa fa-file" aria-hidden="true"></i>
                                <span>添加试卷</span>
                            </a>
                        </li>
                        <li class="active">
                            <a class="" href="/Exam/TeAnswer">
                                <i class="fa fa-search" aria-hidden="true"></i>
                                <span>阅卷</span>
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="sidebar-menu">
                        <li class="active">
                            <a class="" href="/Home/Index">
                                <i class="icon-dashboard"></i>
                                <span>首页</span>
                            </a>
                        </li>
                        
                    </ul>
                }
            </div>
        </aside>
        <section id="main-content">
            <section class="wrapper">
                @RenderBody()

            </section>
        </section>
        <!--main content end-->
    </section>
    
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/jquery-1.8.3.min.js"></script>
    <script src="~/Content/axios/dist/axios.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.scrollTo.min.js"></script>
    <script src="~/Content/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="~/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="~/Content/js/owl.carousel.js"></script>
    <script src="~/Content/js/jquery.customSelect.min.js"></script>

    <!--common script for all pages-->
    <script src="~/Content/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="~/Content/js/sparkline-chart.js"></script>
    <script src="~/Content/js/easy-pie-chart.js"></script>

    <script>
        //owl carousel
        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true

            });
        });
        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });
    </script>
    <style>
        .copyrights {
            text-indent: -9999px;
            height: 0;
            line-height: 0;
            font-size: 0;
            overflow: hidden;
        }
    </style>
</body>
</html>